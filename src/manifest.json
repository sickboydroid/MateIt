{
  "manifest_version": 3,
  "name": "Stockfish Local",
  "version": "1.0.0",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "assets/icon.png"
  },
  "icons": {
    "128": "assets/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["engine/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*.chess.com/*"],
      "js": ["src/content/main.js"]
    }
  ]
}
