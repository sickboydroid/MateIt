{
  "manifest_version": 3,
  "name": "MateIt (Local)",
  "version": "2.0",
  "description": "Stockfish running locally in browser via WebAssembly.",
  "permissions": [],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "engine/stockfish.js",
        "engine/stockfish.wasm",
        "engine/chess.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": ["https://www.chess.com/*"],
      "css": ["styles.css"],
      "js": ["engine/chess.js", "engine.js", "frontend.js"],
      "run_at": "document_end"
    }
  ]
}
